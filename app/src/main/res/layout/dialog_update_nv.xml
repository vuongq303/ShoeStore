<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#CAC6C4"
    android:padding="20sp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChuDeDialogThem"
        android:text="Sửa thông tin nhân vien"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#6A403C"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_name_sua_NV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:hint="Họ và tên">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_hoten_sua_NV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_them_nv_kh"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_email_sua_NV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_taikhoan"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email_sua_NV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_them_nv_kh"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_sdt_sua_NV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_name"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="Số điện thoại">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_sdt__sua_NV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_them_nv_kh"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <Spinner
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_them_nv_kh"
        android:id="@+id/spnChucVu"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:gravity="center"
        android:layout_below="@id/text_title"
        android:orientation="horizontal">
        <Button
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnHuysuaNV"
            android:text="Hủy"
            android:background="@drawable/edittext_dangnhap"
            />
        <Button
            android:id="@+id/btnsuaNV"
            android:background="@drawable/edittext_dangnhap"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Update"
            />
    </LinearLayout>
</LinearLayout>