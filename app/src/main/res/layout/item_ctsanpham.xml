<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#DEE1E4"
       android:padding="20dp"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textAllCaps="true"
           android:layout_gravity="center"
           android:textStyle="bold"
           android:textColor="#654343"
           android:id="@+id/mactsanpham_ctsanpham"
           android:text="Ma san pham: "/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textStyle="bold"
           android:id="@+id/tensanpham_ctsanpham"
           android:text="Ten san pham: "/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textStyle="bold"
           android:id="@+id/tenmausac_ctsanpham"
           android:text="Ten mau sac: "/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:textStyle="bold"
           android:id="@+id/sokicco_ctsanpham"
           android:text="So kich co: "/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:id="@+id/giasanpham_ctsanpham"
           android:textStyle="bold"
           android:text="Gia: "/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:textStyle="bold"
           android:id="@+id/soluongsanpham_ctsanpham"
           android:text="So luong: "/>
   </LinearLayout>
</androidx.cardview.widget.CardView>